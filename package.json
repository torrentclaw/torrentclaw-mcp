    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "commit-and-tag-version": "^12.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
