    "streaming",
    "magnet",
    "download",
    "llm",
    "agent",
    "media"
  ],
  "author": "TorrentClaw (https://torrentclaw.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/torrentclaw/torrentclaw-mcp"
